 <Button 
            android:id="@+id/savebutton"
            android:layout_marginLeft="215px"
            android:layout_height="50dip"
        	android:layout_width="wrap_content" android:textColor="#000066"
        	android:textSize="14dp" android:typeface="serif" android:textStyle="bold"
        	android:text="Submit" 
        	android:layout_marginTop="30px"/>
</LinearLayout>

<RelativeLayout android:id="@+id/headerLayout" android:layout_height="wrap_content"  
				android:paddingLeft="8dip" android:paddingRight="8dip"  android:paddingBottom="2dip"
				android:layout_width="wrap_content"  android:layout_alignParentBottom="true"
				 >
<View
		android:layout_width="3dp"
		android:layout_height="3dp"
		android:background="@android:color/white"
/> 
    <!-- 3 columns -->
    <ImageView
              android:layout_marginLeft="375px"
  	  android:id="@+id/imageHelp"
	  android:layout_width="40dip"
	  android:layout_height="40dip" android:src="@drawable/helpb" android:layout_alignParentLeft="true"
	  android:layout_marginTop="8px" 
	  />
        
